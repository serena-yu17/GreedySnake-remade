            TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="sldOb_ValueChanged" Maximum="2" Minimum="0" HorizontalAlignment="Right" Width="146" Grid.Row="23" Grid.RowSpan="3"/>
        <Label Content="Obstacle difficulty" Margin="0,5.977,-163,0" VerticalAlignment="Top"  Grid.Column="39"
            HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="155.8" Grid.Row="20" Grid.RowSpan="3" Height="34.4"/>
        <Label Content="0" Margin="0,13.777,-44,0" VerticalAlignment="Top"  HorizontalAlignment="Right" Width="31" Grid.Column="39" Grid.Row="24" Grid.RowSpan="4" Height="37.6"/>
        <Label Content="2" HorizontalAlignment="Right" Margin="0,13.777,-108,0" VerticalAlignment="Top" Width="29"  Grid.Column="39" Grid.Row="24" Grid.RowSpan="4" Height="37.6"/>
        <Label Content="4" HorizontalAlignment="Right" Margin="0,13.377,-163.4,0" VerticalAlignment="Top" Width="22"  Grid.Column="39" Grid.Row="24" Height="31.4" Grid.RowSpan="3"/>
        <CheckBox Name="chkWrap" Content="Wrap on borders" Margin="0,5.977,-167.8,0" VerticalAlignment="Top" 
                  VerticalContentAlignment="Center" IsChecked="True"  Grid.Column="39"
                      Height="31" HorizontalAlignment="Right" Width="160.6" Checked="chkWrap_Checked" Unchecked="chkWrap_Checked" HorizontalContentAlignment="Center" Grid.Row="8" Grid.RowSpan="3"/>
        <Label Content="Press Esc to reset" Height="54" Margin="0,12.777,-182.8,0"   Grid.Column="39" 
               VerticalAlignment="Top" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="180" Grid.Row="1" Grid.RowSpan="5" />
        <Slider x:Name="sldGrowth" Margin="0,6.177,-158.8,0" VerticalAlignment="Top" Height="29.6"  Grid.Column="39"
            TickFrequency="1" IsSnapToTickEnabled="True" Minimum="1" Maximum="4"  HorizontalAlignment="Right" Width="146" Grid.Row="31" Grid.RowSpan="3"/>
        <Label Content="Growth" Margin="0,12.176,-163,0" VerticalAlignment="Top"  Grid.Column="39"
            HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="155.8" Grid.Row="28" Grid.RowSpan="4" Height="34.201"/>
