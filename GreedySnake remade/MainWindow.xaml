        <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="{Binding ElementName=mainGrid, Path=Height}" 
                Width="{Binding ElementName=mainGrid,Path=Width}" Grid.Column="0" Margin="0,0,0,0" Grid.RowSpan="40" Grid.ColumnSpan="40">
        </Border>
        <Label Name="lbGameOver" Content="Game Over" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" Width="529.6" Margin="0,0,0,0"
                   HorizontalContentAlignment="Center" FontFamily="Century Gothic" FontStretch="Expanded" VerticalContentAlignment="Center"
               Visibility="Hidden" Background="Beige" Grid.ColumnSpan="36" Height="104.8" Grid.RowSpan="8" Grid.Column="2" Grid.Row="15" Panel.ZIndex="1"/>
        <Slider x:Name="sldSpd" Margin="0,8.177,-158.8,0" VerticalAlignment="Top" Height="28.8"   Grid.Column="39"
            TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="sldSpd_ValueChanged" Maximum="4" Minimum="1" HorizontalAlignment="Right" Width="146" Grid.Row="15" Grid.RowSpan="3"/>
        <Label Content="Speed" Margin="0,15.176,-140,0" VerticalAlignment="Top"   Grid.Column="39"
            HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="100" Grid.Row="12" Grid.RowSpan="4" Height="38.401"/>
        <Label Content="1" Margin="0,11.976,-44,0" VerticalAlignment="Top"  HorizontalAlignment="Right" Width="31" Grid.Column="39" Grid.Row="16" Grid.RowSpan="3"/>
        <Label Content="2" Margin="0,11.976,-89,0" VerticalAlignment="Top"  HorizontalAlignment="Right" Width="29" Grid.Column="39" Grid.Row="16" Grid.RowSpan="3"/>
